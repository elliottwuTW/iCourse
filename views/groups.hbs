<div class="row">
  {{#each groups}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.photo}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">
        <p class="card-text">
          <a href="/groups/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <p class="card-text">{{this.description}}</p>
        {{!-- Follow --}}
        {{#if ../loggedIn}}
        {{#if this.isFollowed}}
        <form action="/follows/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
          <button class="btn btn-warning" type="submit">Unfollow</button>
        </form>
        {{else}}
        <form action="/follows/{{this.id}}" method="POST" class="d-inline">
          <button class="btn btn-primary" type="submit">Follow</button>
        </form>
        {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>