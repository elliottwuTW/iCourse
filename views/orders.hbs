{{#each orders}}
<div class="row">
  <div class="col-md-5">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.courses}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.OrderCourse.price}}</td>
        </tr>
        {{/each}}
        <tr>
          <td></td>
          <td>
            <h4>Total: {{this.amount}}</h4>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <ul>
      <li>id: {{this.id}}</li>
      <li>name: {{this.name}}</li>
      <li>address: {{this.address}}</li>
      <li>phone: {{this.phone}}</li>
      <li>payment_status: {{this.paymentStatus}}</li>
    </ul>

    <div style="display: flex; justify-content: space-around;min-width: 300px;">
      <form action="/orders/{{this.id}}/cancel?_method=PUT" method="POST">
        <button type="submit" class="btn btn-warning" {{#if (equal this.paymentStatus -1)}}disabled{{/if}}>取消訂單</button>
      </form>

      <a href="/orders/{{this.id}}/payment"><button class="btn btn-success" {{#if (equal this.paymentStatus
          -1)}}disabled{{/if}}>立即付款</button></a>
    </div>
  </div>
</div>

<hr />
{{/each}}