<form class="form-signin" action="/auth/register" method="POST" style="width: 100%; max-width: 600px; margin: auto;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
  </div>
  <div class="form-group row">
    <small class="col-auto"><span style="color: red;">*</span>必填欄位</small>
  </div>
  <div class="form-label-group">
    <label for="inputName">Name<span style="color: red; margin-left: 0.1em"> *</span></label>
    <input id="inputName" type="text" name="name" class="form-control" placeholder="Name..." autofocus required>
  </div>
  <div class="form-label-group">
    <label for="inputEmail">Email<span style="color: red; margin-left: 0.1em"> *</span></label>
    <input id="inputEmail" type="text" name="email" class="form-control" placeholder="user@example.com" required
      autofocus>
  </div>
  <div class="form-label-group">
    <label for="inputPassword">Password<span style="color: red; margin-left: 0.1em"> *</span></label>
    <input id="inputPassword" type="password" name="password" class="form-control" placeholder="Password..." required>
  </div>
  <div class="form-label-group">
    <label for="inputPasswordConfirm">Password Confirm</label>
    <input id="inputPasswordConfirm" type="password" name="passwordConfirm" class="form-control"
      placeholder="Password Confirm..." required>
  </div>
  <div class="form-label-group">
    <label>Role<span style="color: red; margin-left: 0.1em"> *</span></label>
    <br>
    <div class="form-check-inline">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="role" value="user">User
      </label>
    </div>
    <div class="form-check-inline">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="role" value="publisher">Publisher
      </label>
    </div>
  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
  <div class="text-center my-2">
    <p><a href="/auth/login">Login</a></p>
  </div>
  <p class="mt-5 mb-3 text-muted text-center">© 2020-2021</p>
</form>