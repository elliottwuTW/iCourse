<form class="form-signin" action="/auth/resetpassword/{{token}}?_method=PUT" method="POST"
  style="width: 100%; max-width: 600px; margin: auto;">
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Reset Password</h1>
  </div>
  <div class="form-label-group">
    <label for="inputPassword">New Password</label>
    <input id="inputPassword" type="password" name="password" class="form-control" placeholder="New Password..."
      required>
  </div>
  <div class="form-label-group">
    <label for="inputPasswordConfirm">Password Confirm</label>
    <input id="inputPasswordConfirm" type="password" name="passwordConfirm" class="form-control"
      placeholder="Password Confirm..." required>
  </div>
  <br />
  <div class="row justify-content-start ml-0">
    <button class="btn btn-secondary" type="submit">Submit</button>
  </div>
</form>